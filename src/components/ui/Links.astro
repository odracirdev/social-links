---
import { Icon } from "astro-icon/components";

const { link, icon, name, desc, color } = Astro.props;
---

<a
  href={link}
  target="_blank"
  class="social-link"
  aria-label=`social-link-${name}`
  style=`--color-social: ${color}`
>
  <Icon name={icon} size={32} />
  <div class="social-info">
    <h3>{name}</h3>
    <p>{desc}</p>
  </div>
</a>

<style>
  .social-link {
    width: 100%;
    height: 6rem;
    display: flex;
    align-items: center;
    gap: 2rem;
    padding: 1rem 2rem;
    margin-bottom: 1.5rem;

    background-color: #afafaf40;
    border-radius: 1rem;
    outline: 2px transparent red;

    transition: background-color ease-in-out 0.3s;
    transition: outline ease-in-out 0.1s;

    @media (width <= 768px) {
      height: fit-content;
      gap: 1rem;
      padding: 1rem;
    }

    &:hover {
      background-color: var(--color-social);
      outline: 2px solid #afafaf;
    }

    & h3,
    p {
      margin: 0;
    }

    & h3 {
      color: var(--light);
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    & svg {
      color: var(--light);

      @media (width <= 768px) {
        flex-shrink: 0;
      }
    }
  }
</style>

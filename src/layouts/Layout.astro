---
// Supports weights 400-700
import "@fontsource-variable/nunito";
// Supports weights 300-700
import "@fontsource-variable/comfortaa";
import Footer from "@components/ui/Footer.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html dir="ltr" lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://links.odracir.dev/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/og.jpg" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="links.odracir.dev" />
    <meta property="twitter:url" content="https://links.odracir.dev/" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/og.jpg" />
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --dark: #010409;
    --light: #e7edf3;
    --light-opacity: #e7edf3d0;
    --blue: #497ff4;

    --h1-size: 2rem;
    --h2-size: 1.75rem;
    --h3-size: 1.25rem;
    --p-size: 1.15rem;

    --h1-size-m: 1.15rem;
    --h2-size-m: 1.1rem;
    --h3-size-m: 1rem;

    --sb-size: 0.35rem;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    background-color: var(--dark);
    color: var(--light);
    font-family: "Nunito Variable", sans-serif;
    font-size: var(--p-size);
  }

  body {
    scrollbar-gutter: stable both-edges;

    &::-webkit-scrollbar {
      width: var(--sb-size);
      height: var(--sb-size);
    }

    &::-webkit-scrollbar-track {
      background: var(--dark);
      border-radius: 4px;
    }

    &::-webkit-scrollbar-thumb {
      background: var(--blue);
      border-radius: 4px;
    }
  }

  @supports not selector(::-webkit-scrollbar) {
    body {
      scrollbar-color: var(--blue) var(--dark);
    }
  }

  h1,
  h2,
  h3 {
    font-family: "Comfortaa Variable", system-ui;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  h1 {
    font-size: var(--h1-size);
  }

  h2 {
    font-size: var(--h2-size);
  }

  h3 {
    font-size: var(--h3-size);
  }

  p {
    margin-bottom: 1.5rem;
    color: var(--light-opacity);
    font-weight: 400;
    text-wrap: pretty;
  }

  a {
    text-decoration: none;
    color: var(--blue);
    font-weight: 700;
  }

  strong {
    color: var(--light);
  }

  @view-transition {
    navigation: auto;
  }

  @media (width <= 768px) {
    h1 {
      font-size: var(--h1-size-m);
    }

    h2 {
      font-size: var(--h2-size-m);
    }

    h3 {
      font-size: var(--h3-size-m);
    }
  }
</style>
